<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
    </style>


    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ErrorSearchActivityTextStyle">
        <item name="android:textColor">@color/refresh_button_background</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="TrackValuesTextViewStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/values_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TrackInfoTitlesTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/track_info_size</item>
    </style>

    <style name="TrackInfoValuesTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/values_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginBottom">@dimen/track_info_values_margin</item>
        <item name="android:textSize">@dimen/track_info_size</item>
    </style>

    <style name="SmallButtonsStyle">
        <item name="android:layout_width">@dimen/small_buttons_width</item>
        <item name="android:layout_height">@dimen/small_buttons_height</item>
        <item name="android:background">@null</item>
    </style>


    <style name="RefreshButtonTextStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/refresh_button_background </item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginTop">@dimen/large_padding_16dp</item>
        <item name="android:textColor">@color/Error_textGrayWhite</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>


    </style>


    <style name="WhiteButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">16dp</item>

    </style>

    <style name="SettingsMenuButtons">
        <item name="android:layout_height">@dimen/height_common_list_element</item>
        <item name="android:layout_marginStart">@dimen/margin_mainScreen_common_left</item>
        <item name="android:layout_marginEnd">@dimen/margin_settingScreen_common_right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ClearSearchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>

    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>


    </style>

    <style name="TrackTitleStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackGroupAndTimeStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/vector_icon_color</item>
    </style>
</resources>